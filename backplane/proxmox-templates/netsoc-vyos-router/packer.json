{
    "description": "Generic Proxmox Template Packer file",
    "variables": {
      "proxmox_api_url": "https://localhost:8006/api2/json",
      "proxmox_username": "root@pam",
      "proxmox_password": "",
      "proxmox_node": "",
      "iso_file": ""
    },
    "builders": [
      {
        "type": "proxmox",
        "proxmox_url": "{{ user `proxmox_api_url`}}",
        "insecure_skip_tls_verify": true,
        "username": "{{ user `proxmox_username`}}",
        "password": "{{ user `proxmox_password`}}",
        "node": "{{ user `proxmox_node` }}",

        "template_name": "netsoc-vyos-router",
        "template_description": "Vyos Router for Netsoc",
        
        "boot_wait": "10s",
        "boot_command": [
          "<enter><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
          "vyos<enter><wait>",
          "vyos<enter><wait>",
          "install image<enter><wait>",
          "<enter><wait>",
          "<enter><wait>",
          "<enter><wait>",
          "Yes<enter><wait>",
          "<enter><wait10><wait10><wait10><wait10><wait10>",
          "<enter><wait5>",
          "<enter><wait5>",
          "testmeme<enter><wait>",
          "testmeme<enter><wait>",
          "<enter><wait5>",
          "reboot<enter><wait>",
          "Yes<enter><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
          "vyos<enter><wait>",
          "testmeme<enter><wait>",
          "configure<enter><wait>",
          "set interfaces ethernet eth0 address 10.0.90.200/24<enter><wait>",
          "set service ssh<enter><wait>",
          "commit<enter><wait>",
          "save<enter><wait>",
          "exit<enter><wait>",
          "poweroff now<enter><wait>"
        ],

        "communicator": "none",
  
        "unmount_iso": true,
        "iso_file": "local:iso/{{ user `iso_file`}}",

        "cores": "2",
        "os": "l26",

        "network_adapters": [
          {
            "bridge": "vmbr0"
          }
        ],
        
        "disks": [
          {
            "type": "scsi",
            "disk_size": "5G",
            "storage_pool": "local-lvm",
            "storage_pool_type": "lvm"
          }
        ]
      }
    ]
  }